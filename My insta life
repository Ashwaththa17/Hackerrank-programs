import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner scanner=new Scanner(System.in);
        String name =scanner.nextLine().trim();
        int Instagramfollowers =scanner.nextInt();
        int posts =scanner.nextInt();
        double hours =scanner.nextDouble();
        System.out.printf("My name is " + name+ ", my Instagram has " + Instagramfollowers +" followers, I have posted " + posts +" posts, and I use Instagram for " + hours +" hours daily.");
       
    }
}
